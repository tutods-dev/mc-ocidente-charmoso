{
	"$schema": "https://biomejs.dev/schemas/1.9.4/schema.json",
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true,
		"defaultBranch": "main"
	},
	"files": {
		"ignore": ["sanity.types.ts"]
	},
	"extends": ["@tutods/biome-config/solidjs"],
	"overrides": [
		{
			"include": ["apps/frontend/src/components/ui"],
			"linter": {
				"rules": {
					"style": {
						"noNonNullAssertion": "warn"
					}
				}
			}
		},
		{
			"include": ["apps/studio"],
			"linter": {
				"rules": {
					"suspicious": {
						"noReactSpecificProps": "off"
					}
				}
			}
		}
	]
}
